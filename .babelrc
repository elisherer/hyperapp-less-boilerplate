{
  "presets": [
    ["@babel/preset-react", { "pragma": "h" }],
    ["@babel/preset-env", {
      "modules": false,
      "targets": {
        "browsers": ["last 2 versions", "ie > 9"]
      },
      "useBuiltIns": "usage"
    }],
    ["@babel/preset-stage-1", { "decoratorsLegacy": true }]
  ],
  "env": {
    "test": {
      "plugins": [
        "@babel/plugin-transform-modules-commonjs"
      ]
    }
  }
}